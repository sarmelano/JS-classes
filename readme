/* 1)форма по дому :
 *адресс
 * кол-во этажей
 * кол - во квартир (в соответствии с колвом квартир появляется количество инпутов)

2) форма по квартире 1
* номер 
* сколько комнат
* сколько жильцов

форма по квартире 2
форма по квартире 3
...... 
по всем кв 

3) форма по жильцу
*введите данные по жильцу первой квартиры
добавить жильца

class House {
  constructor(address, numFloors, numApartments) {
    this.address = address;
    this.numFloors = numFloors;
    this.numApartments = numApartments;
    this.apartments = [];
  }

  addApartment(apartment) {
    this.apartments.push(apartment);
  }

  getInfo() {
    return {
      address: this.address,
      numFloors: this.numFloors,
      numApartments: this.numApartments,
      apartments: this.apartments.map((apartment) => apartment.getInfo()),
    };
  }
}

class Apartment {
  constructor(apartmentNumber, numRooms, numTenants) {
    this.apartmentNumber = apartmentNumber;
    this.numRooms = numRooms;
    this.numTenants = numTenants;
    this.tenants = [];
  }

  addTenant(tenant) {
    this.tenants.push(tenant);
  }

  getInfo() {
    return {
      apartmentNumber: this.apartmentNumber,
      numRooms: this.numRooms,
      numTenants: this.numTenants,
      tenants: this.tenants.map((tenant) => tenant.getInfo()),
    };
  }
}

class Tenant {
  constructor(name) {
    this.name = name;
  }

  getInfo() {
    return {
      name: this.name,
    };
  }
}

// Create the house
const address = prompt("Введите адрес дома:");
const numFloors = parseInt(prompt("Введите количество этажей дома:"));
const numApartments = parseInt(prompt("Введите количество квартир дома:"));

const house = new House(address, numFloors, numApartments);

// Create the apartments
for (let i = 0; i < numApartments; i++) {
  const apartmentNumber = parseInt(prompt(`Введите номер квартиры ${i + 1}:`));
  const numRooms = parseInt(prompt(`Введите количество комнат в квартире ${i + 1}:`));
  const numTenants = parseInt(prompt(`Введите количество жильцов в квартире ${i + 1}:`));

  const apartment = new Apartment(apartmentNumber, numRooms, numTenants);

  // Create the tenants
  for (let j = 0; j < numTenants; j++) {
    const tenantName = prompt(`Введите имя жильца ${j + 1} в квартире ${i + 1}:`);
    const tenant = new Tenant(tenantName);
    apartment.addTenant(tenant);
  }

  house.addApartment(apartment);
}

// Display house information
const houseInfoButton = document.createElement("button");
houseInfoButton.textContent = "Информация о доме";
houseInfoButton.addEventListener("click", () => {
  const houseInfo = house.getInfo();
  alert(JSON.stringify(houseInfo, null, 2));
});

document.body.appendChild(houseInfoButton);
 */